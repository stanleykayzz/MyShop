{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "MyShopDb": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=MyShopDb"
  },
  "AllowedHosts": "*",
  "Environments": {
    "Development": {
      "DatabaseSettings": {
        "UseInMemoryDatabase": false,
        "ConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=MyShopDb"
      }
    },
    "Staging": {
      "DatabaseSettings": {
        "UseInMemoryDatabase": false,
        "ConnectionString": "Server=your_staging_server;Database=your_staging_db;User Id=your_user;Password=your_password;"
      }
    },
    "Production": {
      "DatabaseSettings": {
        "UseInMemoryDatabase": false,
        "ConnectionString": "Server=your_production_server;Database=your_production_db;User Id=your_user;Password=your_password;"
      }
    }
  }
}
